                            </div>
                            <div class="col-md-2">
                                <div class="row_bar">
                                    <select style="font-size:12px;" class="form-control" id="ddlDischargeSpeciality" name="ddlDischargeSpeciality">
                                        @if (Convert.ToString(Session["Speciality"]) == "0")
                                        {
                                            <option selected value="0">
                                                All Specialities
                                            </option>
                                        }
                                        else
                                        {
                                            <option value="0">
                                                All Specialities
                                            </option>
                                        }
