@model List<NHS.Common.RolePermission>
@{
    ViewBag.Title = "Role Permission";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .form-control:disabled, .form-control[readonly] {
        background-color: #fdfdfd;
        opacity: 1;
    }
</style>
<br />
<br />
<div align="left" style="width:90%">
    <h4>Module Permissions</h4>
</div>
<span style="color:green">@TempData["AlertMessage"]</span>
<div class="col-sm-12">
    <div align="right" style="width:90%">
        <a href='@Url.Action("AddPermission", "Home")'>Add New Permission</a>
    </div>
    <br />
    <div class="row">
        <div style="width:90%;">
            <table class="stripe row-border order-column" style="overflow:auto;width:100% !important" id="tblWards">
                <thead>
                    <tr bgcolor="#a9d7cc" style="color:black;  font-size:12px;">
                        <th align="left" width="40%">Module Name</th>
                        <th align="left" width="40%">Role Name</th>
                        <th align="left" width="40%">Full Access</th>
                        <th align="left" width="40%">Read Only</th>
                        <th align="left" width="40%">No Access</th>
                        <th align="left" width="10%">Action</th>
                    </tr>
                </thead>
                <tbody style="font-size:12px;padding:0px;">
                    @if (Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr class="Entries">
                                <td align="left" width="20%">&nbsp;&nbsp;@item.ModuleName</td>
                                <td align="left" width="20%">&nbsp;&nbsp;@item.RoleName</td>
                                @if (item.IsFullAccess == true)
                                {
                                    <td align="left" width="10%">&nbsp;&nbsp;Yes</td>
                                }
                                else
                                {
                                    <td align="left" width="10%">&nbsp;&nbsp;No</td>
                                }
                                @if (item.IsReadOnly == true)
                                {
                                    <td align="left" width="10%">&nbsp;&nbsp;Yes</td>
                                }
                                else
                                {
                                    <td align="left" width="10%">&nbsp;&nbsp;No</td>
                                }
                                @if (item.NoAccess == true)
                                {
                                    <td align="left" width="10%">&nbsp;&nbsp;Yes</td>
                                }
                                else
                                {
                                    <td align="left" width="10%">&nbsp;&nbsp;No</td>
                                }
                                <td width="10%" align="left">&nbsp;&nbsp;<a href="@Url.Action("EditPermission", "Home", new { id = item.ID })"><i class="fas fa-edit"></i></a>&nbsp;&nbsp;<a href="@Url.Action("DeletePermission", "Home", new { id = item.ID })"><i class="fas fa-trash-alt"></i></a></td>

                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="14" class="text-center" align="center">No Records Found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
        $(document).ready(function () {
            $('#tblWards').DataTable(
                {
                    "ordering": true,
                    "paging": true,
                    "searching": true,
                    "pageLength": 10,
                    "order": [[1, "desc"]],
                    "aoColumns": [
                        { "sName": "ModuleName", "sTitle": "Module Name", "bSortable": "true" },
                        { "sName": "RoleName", "sTitle": "Role Name", "bSortable": "true" },
                        { "sName": "IsFullAccess", "sTitle": "Full Access", "bSortable": "false" },
                        { "sName": "IsReadOnly", "sTitle": "Read Only", "bSortable": "false" },
                        { "sName": "NoAccess", "sTitle": "No Access", "bSortable": "false" },
                        { "sName": "Action", "sTitle": "Action", "bSortable": "false" }
                    ],
                    "lengthMenu": [
                        [10, 20, 50, 100, -1],
                        ['10 rows', '20 rows', '50 rows', '100 rows', 'Show all']],
                    "scrollX": true,
                });
        });
</script>


