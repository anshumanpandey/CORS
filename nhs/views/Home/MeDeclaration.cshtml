@model NHS.Common.MEDeclaration
@{
    ViewBag.Title = "Medical Examiner Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<br />
<br /><br />
<div class="container">
    <div class="row form-group">
        <div class="col-xs-12 col-lg-12">
            <div class="row" align="right">
                <div class="col-md-12">
                    <input type="image" src="~/images/Delete.png" width="30" height="30" alt="Submit" id="btnClose2" title="Close" />
                </div>
            </div>
            <ul class="nav nav-pills nav-justified thumbnail setup-panel">
                <li class="disabled">
                    <a href='@Url.Action("PatientDetails", "home", new { id=Model.Patient_ID })'>
                        <h4 class="list-group-item-heading">
                            Patient details
                        </h4>
                    </a>

                </li>
                <li >
                    <a href='@Url.Action("MedicalExaminerReview", "home", new { id=Model.Patient_ID })'>
                        <h4 class="list-group-item-heading">
                            Medical Examiner Scrutiny
                        </h4>
                    </a>
                </li>

                <li class="disabled">
                    <a href='@Url.Action("MedicalExaminerDecision", "home", new { id = Model.Patient_ID})'>
                        <h4 class="list-group-item-heading">
                            Medical Examiner Decision
                        </h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href='@Url.Action("SJRAssessmentTriage", "home", new { id = Model.Patient_ID})'>
                        <h4 class="list-group-item-heading">
                            SJR Assessment Triage
                        </h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href='@Url.Action("OtherReferrals", "home", new { id = Model.Patient_ID})'>
                        <h4 class="list-group-item-heading">
                            Other Referrals
                        </h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href='@Url.Action("PositiveFeedback", "home", new { id = Model.Patient_ID})'>
                        <h4 class="list-group-item-heading">
                            Positive Feedback
                        </h4>
                    </a>
                </li>
                <li class="active">
                    <a href='@Url.Action("MeDeclaration", "home", new { id = Model.Patient_ID})'>
                        <h4 class="list-group-item-heading">
                            ME Declaration
                        </h4>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="row setup-content" id="step-2">
        <div class="col-xs-12 col-lg-12">
            @using (Html.BeginForm("MeDeclaration", "Home", FormMethod.Post, new { @id = Model.MEDeclarationID , name = "frmMEDec" }))
            {
                <div class="col-md-12 well">
                    @*<div class="form-section">*@
                    <div class="lable_title">
                        <h2>MEDICAL EXAMINER DECLARTION SECTION </h2>
                    </div>

                    <div class="row">
                        @if (Model.IsConfirmed == true)
                        {
                            <input type="checkbox" id="IsConfirmedYes" checked name="IsConfirmedYes" onclick="checkAllform()" class="form-control"><span> I confirmed that i have carried out independent and propotionate scrutiny of this death in a way that complies with the  relevant standards and procedure.   </span>
                        }
                        else
                        {
                            <input type="checkbox" id="IsConfirmedNo" name="IsConfirmedNo"onclick="checkAllform()" class="form-control"><span> I confirmed that i have carried out independent and propotionate scrutiny of this death in a way that complies with the  relevant standards and procedure.</span>
                        }
                    </div>
                    <div class="row">
                        @if (Model.check == true)
                        {

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-3">Name of the medical examiner</div>
                                    <div class="col-md-3">Model.MEName</div>
                                    <div class="col-md-3">Office</div>
                                    <div class="col-md-3">Royal Berkshire Hospital </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="col-md-3">Date</div>
                                    <div class="col-md-3">Model.DclartionDate</div>

                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-12">
                                Please fill the below form before submit.
                            </div>

                            foreach (var a in Model.fornames.ToList())
                            {
                              <span>a</span><br/>
                            }

                           
                        }
                    </div>

                </div>

                <div class="pull-right">
                    <button id="activate-prev-1" name="BtnPrevious" class="btn btn-primary btn-lg">Previous</button>
                    <button id="activate-step-2" type="submit" name="BtnFinish" class="btn btn-primary btn-lg">Finish</button>
                    @*<button id="activate-step-3" name="BtnSave" class="btn btn-primary btn-lg">Finish</button>*@
                </div>
            }
        </div>
    </div>
    <br />
    <br />
</div>


<script>
    function checkAllform()
    {
        debugger
        var form = document.getElementsByName("frmMEDec");
        form[0].submit();
        //jQuery("#login-form")[0].submit();
    }
</script>

<script>
    $(document).ready(function () {
        $("#btnClose2").click(function () {
            $("#modelClose2").modal();
        });


    });
    function OpenComment() {
        $("#comment").show();
        $("#BtnOpenComment").hide();
        $("#BtnCloseComment").show();
        return false;
    }
    function CloseComment() {
        $("#comment").hide();
        $("#BtnOpenComment").show();
        $("#BtnCloseComment").hide();
        return false;
    }
</script>
<script type="text/javascript">
$(function () {

     $("#btnModelClose2").click(function(){
window.location.href = "@Url.Action("MortalityReview", "Home", new { id = Model.Patient_ID }))";
    });

});
</script>
<script>
    $(document).ready(function () {
        $("#btnCloseYes").click(function () {
            $("#modelClose2").modal('hide');
        });
    });
</script>
<script>
    $(document).ready(function () {
        //$('#dvPatientDetailsCimment').hide();
        $("#commentslink").click(function () {
            $("#myModalComments").modal();
        });
    });
   
</script>