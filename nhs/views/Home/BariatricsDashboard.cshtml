@model List<NHS.Common.DTO.clsBariatricDetails>
@using NHS.Models;
@{
    ViewBag.Title = "Bariatrics Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
@*<script src="cdnjs.cloudflare.com/ajax/libs/moment.js/2.8.4/moment.min.js"></script>*@

<!-- DataTables -->

<div>
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
            <td width="40%">
                <div id="showfilterdiv" class="ds_filter_btnblue" style="display:none !important;">
                    <a href="javascript:void(0);" onclick="ShowFilter()" id="showfilter" @*class="ds_filter_btn_show"*@> <img src="~/images/show-arrow-blue.png" alt="" />Show Advanced Filters</a>
                </div>
                <div id="hidefilterdiv" class="ds_filter_btnblue" style="display:block !important;">
                    <a href="javascript:void(0);" onclick="HideFilter()" id="hidefilter" @*class="ds_filter_btn_hide"*@> <img src="~/images/hide-arrow-blue.png" alt="" />Hide Advanced Filters</a>
                </div>
            </td>
            @*<td width="60%" align="right" style="padding:10px 15px"><b>Data Refreshed: From @ViewBag.UpdatedSource at @ViewBag.UpdatedDate</b></td>*@
        </tr>

    </table>
</div>
<div class="col-sm-12">
    <div class="row">
        <div class="col-md-12">
            <form action="@Url.Action("BariatricsDashboard", "Home", new { buttonsubmit = true })" method="post">
                <div class="row" id="filtercondition">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-2">
                                <div class="row_bar">
                                    <input style="font-size:10px;height:38px; margin:0 0 0 0; width:100%" class="form-control  datepicker" readonly="readonly" type="text" id="txtStartDate" name="txtStartDate" placeholder="All Dates" value="Start Date @DateTime.ParseExact(Session["BAPPStartDate"].ToString(), "dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture).ToString("dd/MM/yyyy")">
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="row_bar">
                                    <input style="font-size:10px; margin:0 0 0 0; height:38px;width:100%" class="form-control  datepicker" readonly="readonly" type="text" id="txtEndDate" name="txtEndDate" placeholder="All Dates" value="End Date @DateTime.ParseExact(Session["BAPPEndDate"].ToString(), "dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture).ToString("dd/MM/yyyy")">&nbsp;&nbsp;
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="row_bar">
                                    <select style="font-size:12px;  margin:0 0 0 0;" class="form-control" id="ddlPathwayStatus" name="ddlPathwayStatus">
                                        @if (Convert.ToString(Session["PathwayStatus"]) == "0")
                                        {
                                            <option selected value="0">
                                                All Pathway Status
                                            </option>
                                        }
                                        else
                                        {
                                            <option value="0">
                                                All Pathway Status
                                            </option>
                                        }
                                        @foreach (var item in ViewBag.PathwayStatus)
                                        {
                                            if (item.PathwayStatus.ToUpper() == Convert.ToString(Session["PathwayStatus"]).ToUpper() && Convert.ToString(Session["PathwayStatus"]) != "0"
                                                && Convert.ToString(Session["PathwayStatus"]) != "")
                                            {
                                                <option selected value="@item.ID">@item.PathwayStatus</option>
                                            }
                                            else
                                            {
                                                <option value="@item.ID">@item.PathwayStatus</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="row_bar">
                                    <select style="font-size:12px;  margin:0 0 0 0;" class="form-control" id="ddlPathwayEvent" name="ddlPathwayEvent">
                                        @if (Convert.ToString(Session["PathwayEvents"]) == "0")
                                        {
                                            <option selected value="0">
                                                All Pathway Events
                                            </option>
                                        }
                                        else
                                        {
                                            <option value="0">
                                                All Pathway Events
                                            </option>
                                        }
                                        @foreach (var item in ViewBag.PathwayEvents)
                                        {
                                            if (item.PathwayEvent.ToUpper() == Convert.ToString(Session["PathwayEvents"]).ToUpper() && Convert.ToString(Session["PathwayEvents"]) != "0"
                                                && Convert.ToString(Session["PathwayEvents"]) != "")
                                            {
                                                <option selected value="@item.ID">@item.PathwayEvent</option>
                                            }
                                            else
                                            {
                                                <option value="@item.ID">@item.PathwayEvent</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-1">
                                @*<div class="row_bar">
                                        <button id="btnSearch" type="submit" class="btn btn-primary btn-md" name="btnSearch">Search </button>
                                    </div>*@
                                <div class="ds_filter_cont">

                                    <ul>
                                        <li><button id="btnSearch" type="submit" data-toggle="tooltip" title="Search"><img src="~/images/search-icon-blue.png" alt="" /></button"></li>
                                        <li><button id="btnReset" type="button" data-toggle="tooltip" title="Reset Filters"><img src="~/images/refresh-icon-blue.png" alt="" /></button></li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td align="center" valign="middle" style="font-size:14px; padding:5px; border-bottom:0px #ff2e37 solid; border-left:1px #ff2e37 solid; border-right:1px #ff2e37 solid; border-top:1px #ff2e37 solid;"><b>Pathway Status</b></td>
                </tr>
                <tr>
                    <td>
                        <table width="100%" border="0" cellspacing="0" cellpadding="0">                            
                            <tr>
                                <td style="font-size:12px; padding:7px; border-bottom:1px #ff2e37 solid; border-left:1px #ff2e37 solid; border-right:1px #ff2e37 solid; border-top:1px #ff2e37 solid;"><b>Discharged</b></td>
                                <td width="12%" style="font-size:12px; padding:7px; border-bottom:1px #ff2e37 solid; border-left:1px #ff2e37 solid; border-right:1px #ff2e37 solid; border-top:1px #ff2e37 solid;" align="center">@ViewBag.PathwayStatusDischarged</td>
                            </tr>
                            <tr>
                                <td style="font-size:12px; padding:7px; border-bottom:1px #ff2e37 solid; border-left:1px #ff2e37 solid; border-right:1px #ff2e37 solid; border-top:1px #ff2e37 solid;"><b>Surgery Completed</b></td>
                                <td style="font-size:12px; padding:7px; border-bottom:1px #ff2e37 solid; border-left:1px #ff2e37 solid; border-right:1px #ff2e37 solid; border-top:1px #ff2e37 solid;" align="center">@ViewBag.PathwayStatusSurgeryCompleted</td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </div>

        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">


            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td align="center" valign="middle" style="font-size:14px; padding:5px; border-bottom:0px #52d26a solid; border-left:1px #52d26a solid; border-right:1px #52d26a solid; border-top:1px #52d26a solid;"><b>Pathway Status</b></td>
                </tr>
                <tr>
                    <td>
                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <td style="font-size:12px; padding:7px; border-bottom:1px #52d26a solid; border-left:1px #52d26a solid; border-right:1px #52d26a solid; border-top:1px #52d26a solid;"><b>Active</b></td>
                                <td width="12%" style="font-size:12px; padding:7px; border-bottom:1px #52d26a solid; border-left:1px #52d26a solid; border-right:1px #52d26a solid; border-top:1px #52d26a solid;" align="center">@ViewBag.PathwayStatusActive</td>
                            </tr>
                            <tr>
                                <td style="font-size:12px; padding:7px; border-bottom:1px #52d26a solid; border-left:1px #52d26a solid; border-right:1px #52d26a solid; border-top:1px #52d26a solid;"><b>Awaiting Surgery</b></td>
                                <td style="font-size:12px; padding:7px; border-bottom:1px #52d26a solid; border-left:1px #52d26a solid; border-right:1px #52d26a solid; border-top:1px #52d26a solid;" align="center">@ViewBag.PathwayStatusAwaitingSurgery</td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>

        </div>
    </div>

    <br />



    <div class="row">
        <div class="col-md-12" style="padding-left:0;">
            @*<div class="panel panel-info">*@
            @*<div class="panel-heading">Search</div>*@
            @*<div class="panel-body">*@
            <div class="" style="margin:10px 0 10px 0;">
                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <td>
                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                <tr>
                                    <td align="left" width="82%"><label>Show <select id="tblPatientDetails_length" name="tblBariatrics_length" aria-controls="tblPatientDetails" class=""><option value="10">10 rows</option><option value="20">20 rows</option><option value="50">50 rows</option><option value="100">100 rows</option><option value="-1">Show All</option></select>&nbsp;&nbsp; entries</label></td>
                                    <td align="right">Search:</td>
                                    <td align="right">
                                        <input type="text" name="searchfield" id="searchfield" value="@ViewBag.SearchText" style="margin-left: 0.5em" />
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
            <div id="dvCustomerList">
                @Html.Partial("_BariatricsDetails", Model)
            </div>
        </div>
        @*</div>*@
        @*</div>*@
    </div>
</div>
<input type="hidden" id="Reset" name="Reset" value="" />
<br />
<br />

<script>
    $(function () {
        $("#searchfield").keyup(function () {
            var searchfield = $("#searchfield").val();
            var pagesize = $("#tblPatientDetails_length").val();
            GetPage(1, searchfield, pagesize);
        });
    });
</script>
<script>
    function HideFilter()
    {
        $("#filtercondition").fadeOut(400);
        $("#showfilterdiv").show();
        $("#hidefilterdiv").hide();
    }
    function ShowFilter() {
        $("#filtercondition").fadeIn(400);
        $("#hidefilterdiv").show();
        $("#showfilterdiv").hide();
    }
</script>
<script>
    $(function () {
        $("#tblPatientDetails_length").change(function () {
            var searchfield = $("#searchfield").val();
            var pagesize = $("#tblPatientDetails_length").val();
            GetPage(1, searchfield, pagesize);
        });
    });
</script>
