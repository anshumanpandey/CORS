                "ordering": true,
                "paging": true,
                "searching": true,
                "pageLength": 10,
                "order": [[0, "desc"]],
                "aoColumns": [
                    { "sName": "PatientName", "sTitle": "Name", "bSortable": "true" },
                    { "sName": "MRN", "sTitle": "MRN", "bSortable": "true" },
                    { "sName": "ReferralDate", "sTitle": "Referral Date", "bSortable": "true" },
                    { "sName": "NurseAssessment", "sTitle": "Nurse Assessment", "bSortable": "true" },
                    { "sName": "MDTMedical", "sTitle": "MDT Medical", "bSortable": "true" },
                    { "sName": "PsychologyAssess", "sTitle": "Psychology Assess", "bSortable": "true" },
                    { "sName": "Group1", "sTitle": "Group1", "bSortable": "true" },
                    { "sName": "Group2", "sTitle": "Group2", "bSortable": "true" },
                    { "sName": "Group3", "sTitle": "Group3", "bSortable": "true" },
                    { "sName": "Group4", "sTitle": "Group4", "bSortable": "true" },
                    { "sName": "MDTVirtual", "sTitle": "MDT Virtual", "bSortable": "true" },
                    { "sName": "MDTSurgical", "sTitle": "MDT Surgical", "bSortable": "true" },
                    { "sName": "Surgery", "sTitle": "Surgery", "bSortable": "true" },
                    { "sName": "PostOPMed", "sTitle": "Post OP Med", "bSortable": "true" },
                    { "sName": "PostOPDiet", "sTitle": "Post OP Diet", "bSortable": "true" },
                    { "sName": "Outcome", "sTitle": "Outcome", "bSortable": "true" }
                ],
                "lengthMenu": [
                    [10, 20, 50, 100, -1],
                    ['10 rows', '20 rows', '50 rows', '100 rows', 'Show all']]
            });
    });
</script>
