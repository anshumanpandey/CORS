@model NHS.Common.AppUsers
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@{
    ViewBag.Title = "Index";
    NHS.Common.Alert alertMessage = (NHS.Common.Alert)ViewBag.AlertMessage;
}

@section MetaTags{
<title>Sign In</title>
}

@section PageCss{
<link href="@Url.Content("~/assets/plugins/sky-forms/version-2.0.1/css/custom-sky-forms.css")" rel="stylesheet" />


<style>
    .sky-form {
        border: 1px solid #eee !important;
    }
</style>
}

<div class="container content">
    <div class="row margin-bottom-40">
        <div class="col-md-8">
            @if (TempData["AlertLoginMessage1"] != null && TempData["AlertLoginMessage2"] != null && TempData["AlertLoginMessage3"] != null && TempData["AlertLoginMessage4"] != null)
            {
                <span style="color:black">@TempData["AlertLoginMessage1"]</span><span style="color:red">@TempData["AlertLoginMessage2"]</span><span style="color:black">@TempData["AlertLoginMessage3"]</span><br />
                <span style="color:black">@TempData["AlertLoginMessage4"]</span><br/>
            }
            else if (TempData["AlertLoginMessage1"] != null && TempData["AlertLoginMessage2"] != null)
            {
                <span style = "color:red" > @TempData["AlertLoginMessage1"] </span><br />
                <span style = "color:red" > @TempData["AlertLoginMessage2"] </span><br />
            }
            <form action="@Url.Action("Login", "Account")" id="login-form" class="sky-form" method="post" novalidate="novalidate">
                @*<div class="row">
                    <div class="col col-3">
                        <header style="color:black; border-right: solid; border-right-width:1px; border-right-color:#666; font-size:16px">Login</header>
                    </div>
                    <div class="col col-9">
                        <header style="color:black; font-size:16px;text-align:left">Please LOG IN using your normal RBFT windows login details</header>
                    </div>
                </div>*@
                <header style="color:black;">Please LOG IN using your normal RBFT windows login details</header>
                    <fieldset>
                        <section>
                            <div class="row">
                                <label class="label col col-5" style="color:black; font-size:medium">Username</label>
                                <div class="col col-7">
                                    <label class="input">
                                        <i class="icon-append fa fa-user"></i>
                                        <input type="email" name="Email" id="Email" />
                                    </label>
                                </div>
                            </div>
                        </section>

                        <section>
                            <div class="row">
                                <label class="label col col-5" style="color:black; font-size:medium">Password</label>
                                <div class="col col-7">
                                    <label class="input">
                                        <i class="icon-append fa fa-lock"></i>
                                        <input type="password" name="Password" id="Password" />
                                    </label>
                                </div>
                            </div>
                        </section>
                    </fieldset>
                    <footer align="right">                        
                        <button type="submit" id="btnLogin" class="btn btn-primary">Log in</button>
                    </footer>
</form>
        </div>
    </div>
</div>

@section PageScript{

<script src="@Url.Content("~/assets/js/jquery.validate.min.js")"></script>
<script>
    $(document).ready(function () {
        InitializeLoginValidation();

        $('#btnLogin').click(function () {
            if ($("#login-form").valid())
                $("#login-form")[0].submit();
        });
    });

</script>
}