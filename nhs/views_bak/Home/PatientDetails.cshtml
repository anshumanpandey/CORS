@model NHS.Common.clsPatientDetails

@{
    /**/

    ViewBag.Title = "Patient details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .square {
        height: 30px;
        width: 100px;
        background-color: forestgreen;
    }
</style>
<br />
<br />
<div class="container" style="margin-top:-10% !important; margin-left:23%">
    <div class="row form-group">
        <div class="col-xs-12 col-lg-12">
            <div class="row" align="right">
                <div class="col-md-12">
                    <input type="image" src="~/images/Delete.png" width="30" height="30" alt="Submit" id="btnClose1" title="Close" />
                </div>
            </div>

            <ul class="nav nav-pills nav-justified thumbnail setup-panel">
                <li class="active">
                    <a href='@Url.Action("PatientDetails", "home", new { id=Model.ID })'>
                        <h4 class="list-group-item-heading">
                            Patient details
                        </h4>
                    </a>

                </li>
                <li class="disabled">
                    <a href='@Url.Action("MedicalExaminerReview", "home", new { id=Model.ID })'>
                        <h4 class="list-group-item-heading">
                            Medical Examiner Review
                        </h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href='@Url.Action("MedicalExaminerDecision", "home", new { id = Model.ID})'>
                        <h4 class="list-group-item-heading">
                            Medical Examiner Decision
                        </h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href='@Url.Action("SJRAssessmentTriage", "home", new { id = Model.ID})'>
                        <h4 class="list-group-item-heading">
                            SJR Assessment Triage
                        </h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href='@Url.Action("OtherReferrals", "home", new { id = Model.ID})'>
                        <h4 class="list-group-item-heading">
                            Other Referrals
                        </h4>
                    </a>
                </li>
                <li class="disabled">
                    <a href='@Url.Action("PositiveFeedback", "home", new { id = Model.ID})'>
                        <h4 class="list-group-item-heading">
                            Positive Feedback
                        </h4>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="row setup-content" id="step-1">
        <div class="col-xs-12 col-lg-12">
            <div class="lable_title">
                <h2>Patient Details (to be pulled from EPR) </h2>
            </div>
            @using (Html.BeginForm("PatientDetails", "Home", FormMethod.Post, new { @id = Model.ID }))
            {
            <div class="row">
                <div class="col-md-3">
                    <div class="row_bar">
                        <b>Patient Name</b>
                        @Html.HiddenFor(model => model.ID)
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <span>@Model.PatientName</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <b>MRN</b>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <span>@Model.NHSNumber</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <b>Patient age at time of death </b>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <span>@Model.Age</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <b>Gender</b>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <span>@Model.Gender</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <b>Ward (on discharge)</b>

                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <span>@Model.DischargeWard</span>

                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <b>Consultant (on discharge)</b>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <span>@Model.DischargeConsutantName</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <b>Emergency / Planned Admission </b>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <span>@Model.AdmissionType</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <b>Day/ Date of Admission</b>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <span>@Model.DateofAdmission</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <b>Time of arrival</b>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <span>@Model.TimeofAdmission</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <b>Day/ Date of Death </b>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <span>@Model.DateofDeath</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <b>Time of death </b>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <span>@Model.TimeofDeath</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <b>Primary Diagnosis</b>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <span>@Model.PrimaryProcedure</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="row_bar">
                        <b>Comorbities Count</b>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="row_bar">
                        <span>@Model.ComorbiditiesCount</span>
                    </div>
                </div>
                <br />
                <br />
                <div class="col-md-12">
                    <button type="button" class="btn btn-primary btn-block" id="myBtnProcedures">Secondary Diagnoses (@Model.DiagnosisCount) and Procedures (@Model.ProcedureCount)</button>
                </div>
                <br /><br />
                <div class="col-md-4">
                    @*<label class="label_part">Coding issue identified?</label>*@
                    <b>Coding Issue Identified </b>
                </div>
                <div class="col-md-0">
                    @if (Model.CodingIssueIdentified == true)
                    {
                        <input type="checkbox" checked id="CodingIssueIdentified" name="CodingIssueIdentified"><span> Yes </span>
                    }
                    else
                    {
                        <input type="checkbox" id="CodingIssueIdentified" name="CodingIssueIdentified"><span> Yes </span>
                    }
                    @*@Html.CheckBoxFor(model => model.CodingIssueIdentified, new { htmlAttributes = new { @class = "form-control" } })<span> Yes </span>*@
                </div>
                @*<div class="col-md-1">
            <span>No </span> @Html.CheckBoxFor(model => model.objclPatientDetails.CodingIssueIdentified, new { htmlAttributes = new { @class = "form-control" } })
        </div>*@

                <br />
                <br />
                <div class="col-md-12" id="dvPatientDetailsCimment">
                    <b>Comments</b>
                    @Html.TextAreaFor(model => model.Comments, 5, 200, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })

                </div>
            </div>
                <div class="pull-right">
                    <button id="BtnNext" type="submit" name="BtnNext" class="btn btn-primary btn-lg">Save & Next</button>
                </div>
            }
            @*</form>*@
        </div>
    </div>
    <br />
    <br />

</div>

<div class="modal fade" id="myModalProcedures">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Coding-Diagnosis & Procedure</h4>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">

                <table class="table table-bordered" id="assets-data-table">
                    <tr bgcolor="#a9d7cc" style="color:black;">
                        <th style="text-align:center">FCENumber  </th>
                        <th style="text-align:center">CoMorbidities  </th>
                        <th style="text-align:center">Diagnosis Position</th>
                        <th style="text-align:center">Diagnosis</th>
                        <th style="text-align:center">Procedures</th>
                    </tr>
                    <tbody>
                        @foreach (var item in ViewBag.Diagnoses)
                        {
                        <tr style="color:black;color:black" bgcolor="cadetblue">
                            <td>
                                <div style="text-align:center">@item.FCENumber</div>
                            </td>
                            @if (item.ComorbidityFlag == true)
                            {
                                <td align="center"><img src="~/images/GreenCircle.png" width="27" height="27"></td>
                            }
                            else
                            {
                                <td align="center"><img src="~/images/GeryImg.png" width="27" height="27"></td>
                            }
                            <td>
                                <div style="text-align:center">@item.Position</div>
                            </td>
                            <td>@item.DiagnosisDescription</td>
                            <td>@item.ProcedureDescription</td>
                        </tr>
                        }

                    </tbody>
                </table>

            </div>

            <!-- Modal footer -->
            @*<div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>*@

        </div>
    </div>
</div>

<div class="modal fade" id="myModalSecondaryDiagnoses">
    <div class="modal-dialog modal-md">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Coding-Diagnosis & Procedure</h4>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <table class="table table-bordered" id="assets-data-table">
                    <tr bgcolor="#a9d7cc" style="color:white;">
                        <th style="text-align:center">CoMorbidities  </th>
                        <th style="text-align:center">Diagnosis Position</th>
                        <th style="text-align:center">Diagnosis</th>

                    </tr>
                    <tbody>
                        @foreach (var item in ViewBag.Diagnoses)
                        {
                        <tr style="color:black;" bgcolor="#a9d7cc">
                            @if (item.ComorbidityFlag == true)
                            {
                                <td align="center"><img src="~/images/GreenCircle.png" width="27" height="27"></td>
                            }
                            else
                            {
                                <td align="center"><img src="~/images/GeryImg.png" width="27" height="27"></td>
                            }
                            <td>
                                <div style="text-align:center">@item.Position</div>
                            </td>
                            <td>@item.DiagnosisDescription</td>
                            <td>@item.ProcedureDescription</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Modal footer -->
            @*<div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>*@

        </div>
    </div>
</div>

<div class="modal fade" id="modelClose1">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Message</h4>
                <button type="button" class="close" data-dismiss="modal">×</button>
            </div>
            <!-- Modal body -->
            <div class="modal-body">

                <div class="form-section" style="text-align:left">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row_bar">
                                <div>Do you want to exit without saving your changes?</div>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="col-md-4">
                            <button type="button" class="btn btn-primary btn-block" id="btnModelClose1" data-dismiss="modal" formmethod="post" onclick="location.href='@Url.Action("MortalityReview", "Home", new { id=Model.ID })'">Yes</button>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-primary btn-block" name="btnCloseYes" id="btnCloseYes">No</button>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        //$('#dvPatientDetailsCimment').hide();
        $("#myBtnProcedures").click(function () {
            $("#myModalProcedures").modal();
        });
        $("#myBtnSecondaryDiagnoses").click(function () {
            $("#myModalSecondaryDiagnoses").modal();
        });
        $("#btnClose1").click(function () {
            $("#modelClose1").modal();
        });
        //$("#BtnNext").click(function (event) {
        //    if (!confirm('Are you sure that you want to submit the form'))
        //        event.preventDefault();
        //});
    });
</script>
<script type="text/javascript">
$(function () {
    $("#btnModelClose1").click(function(){
window.location.href = "@Url.Action("MortalityReview", "Home", new { id = Model.ID })";
    });
});
</script>
<script>
        $(document).ready(function () {
            $("#btnCloseYes").click(function () {
                $("#modelClose1").modal('hide');
            });
        });
</script>



